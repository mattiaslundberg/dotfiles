[user]
	email = mattiaslundberg@openmailbox.org
	name = Mattias Lundberg
	signingkey = E4B7697B
[commit]
	gpgsign = true
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	st = status --short --branch
	ci = commit
    cia = commit --amend
	br = branch
	co = checkout
	cp = cherry-pick
    df = diff
    mt = mergetool
	sh = show
	fa = fetch --all
	fu = fetch upstream
	fo = fetch origin
	dc = diff --cached
    mud = merge upstream/develop
    mod = merge origin/develop
    rud = rebase upstream/develop
    rod = rebase origin/develop
    mom = merge origin/master
    rom = rebase origin/master
	lg = log -p
	ls = ls-files
	pp = push origin
    ppf = push origin --force
	lol = log --pretty=format:"%C(yellow)%h\\ %Cblue%G?%Cred%d\\ %Creset%s%Cgreen\\ (%cr)%Cblue\\ [%cn]" --decorate --graph
	lola = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ (%cr)%Cblue\\ [%cn]" --decorate --numstat
	assume = update-index --assume-unchanged
	unassume = update-index --no-assume-unchanged
	assumed = "!git ls-files -v | grep ^h | cut -c 3-"
	reset-permission = "!git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply"
	svnr = svn rebase
	svnd = svn dcommit
	svnl = svn log --oneline --show-commit
	svnf = svn fetch
	untrack = rm -r --cached 

	# Show files ignored by git:
	ign = ls-files -o -i --exclude-standard
	undo = reset --soft HEAD^
	g = grep --break --heading --line-number

[core]
	editor = vim
	excludesfile = /home/mattias/.gitignore_global
	autocrlf = input
[merge]
	tool = gvimdiff
	conflictstyle = diff3
	prompt = false
[push]
	default = current
[github]
	user = mattiaslundberg
