[user]
    email = me@mlundberg.se
    name = Mattias Lundberg
[color]
    ui = auto
[alias]
    st = status --short --branch
    ci = commit
    cia = commit --amend --no-edit
    br = branch
    co = checkout
    cp = cherry-pick
    df = diff
    dc = diff --cached
    fa = fetch --all --prune
    rom = rebase origin/master
    mm = "!git up && git ppf && git checkout master && git merge - && git lot"
    ra = rebase --abort
    rc = rebase --continue
    ls = ls-files
    up = "!git fetch --all --prune && git rebase origin/master"
    pp = push origin
    ppf = push origin --force-with-lease
    lol = log --pretty=format:"%C(yellow)%h\\ %Cblue%G?%Cred%d\\ %Creset%s%Cgreen\\ (%cr)%Cblue\\ [%cn]" --decorate --graph
    lot = log -n 15 --pretty=format:"%C(yellow)%h\\ %Cblue%G?%Cred%d\\ %Creset%s%Cgreen\\ (%cr)%Cblue\\ [%cn]" --decorate --graph
    lola = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cgreen\\ (%cr)%Cblue\\ [%cn]" --decorate --numstat
    reset-permission = "!git diff -p -R | grep -E \"^(diff|(old|new) mode)\" | git apply"
    standup = "!git log --reverse --branches --since=$(if [[ "Mon" == "$(date +%a)" ]]; then echo "friday"; else echo "yesterday"; fi) --author=$(git config --get user.email) --format=format:'%C(cyan) %ad %C(yellow)%h %Creset %s %Cgreen%d' --date=local"
    # Show files ignored by git:
    ign = ls-files -o -i --exclude-standard
    undo = reset --soft HEAD^
    g = grep --break --heading --line-number
    g = grep --break --heading --line-number
    cleanbranches = "!git branch --merged | grep -v \"*\" | xargs -n 1 git branch -d"
[core]
    editor = vi
    excludesfile = ~/.gitignore_global
    autocrlf = input
[merge]
    tool = vimdiff
    conflictstyle = diff3
    prompt = false
[push]
    default = current
    pushDefault = origin
[pull]
    rebase = True
[commit]
    gpgsign = true
[github]
    user = mattiaslundberg
[advice]
    detachedHead = false
[include]
    path = ~/.gitconfig.local
