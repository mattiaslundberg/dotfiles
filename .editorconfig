root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = 0
trim_trailing_whitespace = false

[{*.ex,*.exs,*.eex}]
indent_style = space
indent_size = 2

[{*.js,*.jsx,*.json,*.yml}]
indent_size = 2

[*.html]
indent_size = 4

[*.py]
indent_size = 4

[COMMIT_EDITMSG]
max_line_length = 0

[Makefile]
indent_style = tab
